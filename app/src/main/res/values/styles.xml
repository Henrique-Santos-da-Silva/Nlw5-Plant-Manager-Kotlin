<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewAppStyle">
        <item name="android:textColor">@color/dark_green2</item>
        <item name="fontFamily">@font/jost</item>
    </style>
    
    <style name="PlantManagerTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/jost</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="PlantManagerButtonStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/jost</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_app_buttons</item>
    </style>

    <style name="PlantManagerDialogButtonStyle">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/jost</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_dialog_buttons</item>
    </style>

    <style name="PlantManagerTabLayoutTextAppearance" parent="Widget.Design.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/jost</item>
    </style>

    <style name="user_profile_avatar_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>